package gateway.core.redis;

import java.io.IOException;
import java.io.InputStream;
import java.util.Map;

import org.apache.ibatis.io.Resources;
import org.junit.jupiter.api.Test;
import org.yaml.snakeyaml.Yaml;

import redis.clients.jedis.Jedis;

public class Config {
	public static Jedis jedis;
	static {
		try {
			Yaml yaml = new Yaml();
			InputStream inputStream  = Resources.getResourceAsStream("app.yaml");
			Map<String, Object> map = (Map<String, Object>) yaml.loadAs(inputStream, Map.class).get("redis"); 
			int database = Integer.parseInt(map.get("database")+"");
			String host = map.get("39.108.91.105")+"";
			int port = Integer.parseInt(map.get("port")+"");
			String pw = map.get("password")+""; 
			jedis = new Jedis(host,port); 
			jedis.auth(pw); 
			jedis.select(11);
			
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	@Test
	public void get() throws IOException {
		Yaml yaml = new Yaml();
		InputStream inputStream  = Resources.getResourceAsStream("app.yaml");
		Map<String, Object> map = yaml.loadAs(inputStream, Map.class); 
		//String port = ((Map<String, Object>) map.get("redis")).get("port").toString();
		
		int database = 0;
		String host = "";
		int re_port = 0;
		String pw = "";
		String appid = map.get("appid").toString();
		System.out.println(appid);
	}
}
